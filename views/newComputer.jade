        function refreshModelOptions() {
            if ($("#make").val() === "Add a New Option") {
                let make = prompt("New Make:");
                if (make !== null && make !== "") {
                    console.log(make);
                    $("#make").append(new Option(make, make));
                    $("#make").val(make);
                    newModel();
                }
            }
            else {
                $.ajax({
                    type: "GET",
                    url: "#{location}/getModelOptions?type=Computer&make=" + $("#make").val(),

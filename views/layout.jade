    body
        byu-header(full-width="")
            span(slot="site-title") Religious Education Inventory
            span(slot="site-title" class="subtitle")= title
            if(download)
                a(slot='actions' href='#{location}/download/' + download style='padding-right: 25px;') Export
            if(actionButton)
                a(slot='actions' href='#{location}/#{actionButton.href}' style='padding-right: 25px;')= actionButton.name

            byu-search(slot="search", action="submit-form", method="get", placeholder="Search")
                form(method="get" action="#{location}/search")
                    input(type="search" name="searchTerms")
            byu-user-info(slot="user")
                a(slot="login", href="#{location}/cas") Sign In
                a(slot="logout", href="#{location}/logout") Sign Out
                if(user)
                    if(user.name)
                        span(slot="user-name") #{user.name}
                    else if (user.netId)
                        span(slot="user-name") #{user.netId}
            byu-menu(slot="nav", collapsed="")
                if(title === 'Employees')
                    a(href="#{location}/" class='active') Employees
                else
                    a(href="#{location}/") Employees
                if(title === 'Computers')
                    a(href="#{location}/computerTable" class='active') Computers
                else
                    a(href="#{location}/computerTable") Computers
                if(title === 'Monitors')
                    a(href="#{location}/monitorTable" class='active') Monitors
                else
                    a(href="#{location}/monitorTable") Monitors
                if(title === 'Printers')
                    a(href="#{location}/printerTable" class='active') Printers
                else
                    a(href="#{location}/printerTable") Printers
                if(title === 'Peripherals')
                    a(href="#{location}/peripheralTable" class='active') Peripherals
                else
                    a(href="#{location}/peripheralTable") Peripherals
                if(title === 'JSB Storage\'s Stuff')
                    a(href="#{location}/card?EmployeeID=300" class='active') JSB Storage
                else
                    a(href="#{location}/card?EmployeeID=300") JSB Storage
